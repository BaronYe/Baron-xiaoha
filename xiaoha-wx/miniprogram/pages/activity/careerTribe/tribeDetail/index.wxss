/* pages/activity/careerTribe/tribeDetail/index.wxss */
.tribeDetail_container {
  width: 100%;
  height: 100%;
}

.tribeDetail_container ._main {
  padding: 30rpx;
  box-sizing: border-box;
}

.tribe_introduce {
  width: 690rpx;
  height: 204rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 10rpx 0px rgba(12, 47, 166, 0.1);
  border-radius: 20rpx;
  display: flex;
  padding: 45rpx 0 45rpx 50rpx;
  box-sizing: border-box;
}

.tribe_introduce .left {
  width: 113rpx;

}

.tribe_introduce .left image {
  width: 100%;
  height: 113rpx;
}

.tribe_introduce .right {
  flex: 1;
  padding-left: 55rpx;
  box-sizing: border-box;
}

.tribe_introduce .right .name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;

}

.recommend {
  padding-top: 28rpx;
  box-sizing: border-box;
}

.remok {
  font-size: 26rpx;
  color: #333333;
}

.level_icon {
  height: 24rpx;
  width: 24rpx;
  display: inline-block;
  padding: 0 5rpx;

}

._main .identifier {
  font-size: 36rpx;
  padding: 60rpx 0 20rpx 0;
  display: flex;
  align-items: center;
  position: relative;
}

.tribe_study {

  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 42rpx;
}

.QRcode {
  width: 304rpx;
  height: 304rpx;
  display: block;
  margin: 40rpx auto;
}

.QRcode image {
  width: 100%;
  height: 100%;
}

.QRcode_text {
  width: 401rpx;
  margin: 10rpx auto;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #656565;

}

._main .btn {
  width: 450rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #2759FF;
  border-radius: 44px;
  font-size: 32rpx;
  position: fixed;
  margin: 79rpx auto 20rpx;
  font-weight: 500;
  color: #FEFEFE;
  text-align: center;
  bottom:40rpx;
  left:50%;
  transform: translate(-50%);
}