page {
    height: 100%;
}
.discussion-container {
  padding: 30rpx 30rpx 0rpx;
  box-sizing: border-box;
}
.discussion-container .comment {
  position: fixed;
  right: 30rpx;
  bottom: 50rpx;
  width: 148rpx;
  line-height: 58rpx;
  border-radius: 44rpx;
  background-color: rgba(38, 88, 255, 100);
  color: #fff;
}

.discussion-container .list {
  padding: 30rpx 0 0;
}

.discussion-container .list .list_item>view:nth-of-type(2) image {
  width: 34rpx;
  height: 34rpx;
}
.discussion-container .list .list_item>view:nth-of-type(2){
  flex: 1;
}
.discussion-container .list>view:nth-of-type(1) {
  display: flex;
}

.list_item_footer {
  margin-left: 68rpx;
  padding-top: 20rpx;
  border-top: 1px solid rgba(231, 231, 231, 100);
}

.list_item_footer>view {
  display: flex;
}

.list_item_footer>view>view:nth-of-type(2) {
  border-bottom: 1px solid rgba(231, 231, 231, 100);
}

.list_item_footer .image {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
}

.discussion-container .list ._image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.space-between {
  display: flex;
  justify-content: space-between;
}

.user-content-view {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 45rpx;
  text-align: justify;
}

.hide {
  display: -webkit-box;
}

.show {
  display: block
}

.row-height {
  line-height: 58rpx;
  height: 58rpx;
}

.line {
  line-height: 48rpx;
}
.discussion-container .noData image{
  width: 471rpx;
  height: 452rpx;
  margin: 60rpx;
}

