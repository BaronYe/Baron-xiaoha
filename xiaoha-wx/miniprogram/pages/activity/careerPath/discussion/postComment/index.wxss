.postComment {
  font-size: 28rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

textarea {
  width: 100%;
  height: 400rpx;
  line-height: 40rpx;
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  color: rgba(136, 136, 136, 100);
  box-shadow: 0px 2rpx 6rpx 0px rgba(0, 0, 0, 40);
  font-family: Microsoft Yahei;
}


.postComment>view:nth-last-child(1) {
  width: 218rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  background-color: rgba(38, 88, 255, 100);
  color: rgba(255, 255, 255, 100);
  text-align: center;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 40);
  margin: 200rpx auto 0;
}