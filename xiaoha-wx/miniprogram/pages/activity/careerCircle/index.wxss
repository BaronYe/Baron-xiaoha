.careerCircle>.partition {
  line-height: 60rpx;
  height: 60rpx;
  padding: 0 30rpx;
  background: rgba(234, 239, 255, 1);
}
.careerCircle .subhead {
  padding: 10rpx;
}

.careerCircle>view:nth-of-type(2) {
  background: rgba(229, 229, 229, 1);
  width: 650rpx;
  height: 329rpx;
  margin: 30rpx auto;
  padding: 20rpx;
  border-radius: 10rpx;
}

.careerCircle>view:nth-of-type(2)>image {
  width: 100%;
  height: 100%;
}
.inner {
  padding: 0 30rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.inner>view:nth-of-type(1) {
  height: 300rpx;
}

movable-area {
  width: 100%;
  height: 100%;
}

.item {
  text-align: center;
  margin-right: 30rpx;
  display: inline-block;
  width: 220rpx;
  height: 300rpx;
  box-shadow: 0px 1px 6px 0px rgba(12, 48, 166, 0.1) inset;
  border-radius: 10rpx;
}
.item>._img {
  margin-top: 30rpx;
  width: 100rpx;
  height: 100rpx;
}
.item button {
  margin: 20rpx 30rpx;
  font-size: 28rpx;
  text-align: center;
  padding: 0;
  background-color: #2657FF;
  line-height: 50rpx;
  color: #fff;
}
.mb_20 {
  margin-bottom: 40rpx;
}

.index-first {
  display: inline-block;
  width: 15rpx;
  height: 150rpx;
  background: firebrick;
}

.item-move {
  text-align: center;
  margin-right: 30rpx;
  display: inline-block;
  width: 220rpx;
  height: 300rpx;
  box-shadow: 0px 1px 6px 0px rgba(12, 48, 166, 0.1) inset;
  border-radius: 10rpx;
}
.item-move>._img {
  margin-top: 30rpx;
  width: 100rpx;
  height: 100rpx;
}
.item-move button {
  margin: 20rpx 30rpx;
  font-size: 28rpx;
  text-align: center;
  padding: 0;
  background-color: #2657FF;
  line-height: 50rpx;
  color: #fff;
}