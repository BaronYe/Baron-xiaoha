.safe{
  padding: 30rpx;
}

.safe>view>view {
  box-sizing: border-box;
  line-height:  130rpx;
  display: flex;
}

.safe>view>view:nth-of-type(1)>image {
  width: 100%;
  height: 100%;
  
}
.safe>view>view:nth-of-type(2) {
  flex: 1;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid rgba(237,237,237,1);
}
.safe>view>view:nth-of-type(2)>view:nth-of-type(1){
  color: #333333;
  font-size: 30rpx;
}
.safe>view>view:nth-of-type(2) >view:nth-of-type(2){
  margin-right: 21rpx;
  color:grey
}
.safe>view>view:nth-of-type(2) >view:nth-of-type(2) >image{
  width: 14rpx;
  height: 24rpx;
}


