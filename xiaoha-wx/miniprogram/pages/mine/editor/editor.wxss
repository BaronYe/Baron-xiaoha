.mine-editor {
  padding: 30rpx;
}

.mine-editor>view {
  display: flex;
  justify-content: space-between;
  line-height: 119rpx;
  border-bottom: 1px solid #eee;
}
picker .item{
  width: 690rpx;
  display: flex;
  justify-content: space-between;
  line-height: 119rpx;
  border-bottom: 1px solid #eee;
}
picker image{
  width: 14rpx;
  height: 24rpx;
  margin-left: 20rpx;
}

.mine-editor>view:nth-of-type(7) {
  display: block;
}
.mine-editor>view:nth-of-type(7)>view:nth-of-type(2){
  display: flex;
  flex-wrap:  wrap;
}
.mine-editor>view:nth-of-type(7)>view:nth-of-type(2)>view {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  line-height: 150rpx;
  border-radius: 10rpx;
  background-color: #E9EFFF;
  margin:0 30rpx 30rpx 0;
}
.mine-editor>view:nth-of-type(7)>view:nth-of-type(2)>view:nth-of-type(4n){
  margin:0 0 30rpx 0;
}
.mine-editor>view:nth-of-type(7)>view:nth-of-type(2)>view image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.mine-editor>view:nth-of-type(7)>view:nth-of-type(2)>view >view{
  position: absolute;
  right: -10rpx;
  top: -10rpx; 
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 50%;
  text-align: center;
  box-sizing: border-box;
  color: #fff;
  background-color: red;
}
.mine-editor>view:nth-of-type(7)>view:nth-of-type(2)>view:nth-last-of-type(1) {
  background-color: #E9EFFF;
  color: #0270ff;
  font-size: 48px;
}
.mine-editor>view .grey {
  display: flex;
}

.mine-editor>view .grey>view:nth-of-type(1)>image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.mine-editor>view .grey>view:nth-of-type(2)>image {
  width: 14rpx;
  height: 24rpx;
  margin-left: 20rpx;
}