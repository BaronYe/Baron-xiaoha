.mine-editor-revise{
  padding: 40rpx 30rpx;
}
.mine-editor-revise >view:nth-of-type(1) input {
  padding: 10rpx ;
  border-bottom: 1px solid rgba(39,89,255,0.8);
}
.mine-editor-revise >view:nth-of-type(1) >text{
  position: absolute;
  right: 40rpx;
  top: 60rpx;
  color: #999;
}
.mine-editor-revise >view:nth-of-type(2){
  float: right;
  padding: 10rpx 20rpx;
  border-radius:8rpx;
  color: #999;
  margin-top: 10rpx;
}
.mine-editor-revise .select{
  position: fixed;
  top: 80rpx;
  width: 93%;
  height: 93%;
  box-sizing: border-box;
  margin-top: 100rpx;
  background-color: #fff;
}
.mine-editor-revise .select >view{
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
  padding: 0 5rpx;
}