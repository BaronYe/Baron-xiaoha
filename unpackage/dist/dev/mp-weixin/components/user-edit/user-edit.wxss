.pop-content {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: white;
  z-index: 2;
}
.pop-content .top-bar {
  width: 100%;
  height: 88rpx;
}
.pop-content .top-bar .back {
  float: left;
}
.pop-content .top-bar .back image {
  width: 50rpx;
  height: 50rpx;
}
.pop-content .top-bar .mine {
  text-align: center;
  font-size: 20px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #272832;
  line-height: 28px;
}
.pop-content .pop-cell {
